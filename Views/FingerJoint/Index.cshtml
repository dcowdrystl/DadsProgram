<script>
    $.ajax({
        type: "GET",
        url: "/FingerJoint/GetData",
        contentType: "application/json; charset=utf-8",
        dataType: "json",
        success: function (data) {
            var ctx = document.getElementById("fingerJointChart").getContext("2d");
            var chart = new Chart(ctx, {
                type: "line",
                data: {
                    labels: data.fingerData,
                    datasets: [
                        {
                            label: "Extension",
                            data: data.extensionData,
                            backgroundColor: "rgba(255, 99, 132, 0.2)",
                            borderColor: "rgba(255, 99, 132, 1)",
                            borderWidth: 1
                        },
                        {
                            label: "Flexion",
                            data: data.flexionData,
                            backgroundColor: "rgba(54, 162, 235, 0.2)",
                            borderColor: "rgba(54, 162, 235, 1)",
                            borderWidth: 1
                        }
                    ]
                },
                options: {
                    scales: {
                        yAxes: [
                            {
                                 ticks: {
                        min: -90,
                        max: 90,
                        stepSize: 1,
                        callback: function(value) {
                            if (value === -90 || value === 90) {
                                return value;
                            }
                        }
                    }
                            }
                        ]
                    }
                }
            });
        },
        error: function (error) {
            console.log(error);
        }
    });
    </script>