@model IEnumerable<FingerJoint>
<head>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js@2.9.3/dist/Chart.min.js"></script>
</head>
<h2>Finger Joint Progress</h2>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Date</th>
            <th>Finger</th>
            <th>Extension</th>
            <th>Flexion</th>
            <th>Active Value</th>
            <th>Passive Value</th>
            <th>Description</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ID</td>
                <td>@item.Name</td>
                <td>@item.Date</td>
                <td>@item.Finger</td>
                <td>@item.Extension</td>
                <td>@item.Flexion</td>
                <td>@item.ActiveValue</td>
                <td>@item.PassiveValue</td>
                <td>@item.Description</td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create">Create New</a>


